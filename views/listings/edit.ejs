<% layout("/layouts/boilerplate") %>
<div class="row mt-2">
  <div class="col-8 offset-2">
    <h3>Edit your Listing</h3>
    <form
      method="POST"
      action="/listings/<%=listing._id%>?_method=PUT"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title">Title</label>
        <input
          name="listing[title]"
          type="text"
          class="form-control"
          value="<%=listing.title%>"
          required
        />
        <div class="valid-feedback">Title Looks Yosh!</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          class="form-control"
          rows="4px"
          cols="5px"
          name="listing[description]"
          required
        >
        <%=listing.description%>
      </textarea
        >
      </div>
      

      <div class="mb-3">
        Original Listing Image <br />
        <img src="<%=originalImageUrl%>" />
      </div>


      <div class="mb-3">
        <label for="image" class="form-label">upload your Image</label>
        <input
          name="listing[image]"
          type="file"
          class="form-control"
          value="<%=listing.image%>"
        />
      </div>


      <div class="row">
        <div class="mb-3 col-4">
          <label for="price" class="form-label">Price</label>
          <input
            name="listing[price]"
            type="number"
            class="form-control"
            value="<%=listing.price%>"
            required
          />
          <div class="invalid-feedback">Price should be valid</div>
        </div>
        <div class="mb-3 col-8">
          <label for="country" class="form-label">Country</label>
          <input
            name="listing[country]"
            type="text"
            class="form-control"
            value="<%=listing.country%>"
            required
          />
          <div class="invalid-feedback">Country should be valid</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          name="listing[location]"
          type="text"
          value="<%=listing.location%>"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Loaction should be valid</div>
      </div>

      <button class="btn btn-dark edit-btn mb-3">Edit</button>
    </form>
  </div>
</div>
