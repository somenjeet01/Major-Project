<% layout("/layouts/boilerplate") %>

<div class="row mt-2">
  <div class="col-md-8 offset-2 listing-card">
    <h3><%= listing.title%></h3>
  </div>
  <div class="card col-6 offset-2 show-card listing-card">
    <img
      src="<%= listing.image %>"
      class="card-img-top show-img"
      alt="/listing_image"
    />
    <div class="card-body">
       <p class="card-text"><i> Owned  By </i><b><%= listing.owner.username%></b> </p> 
       <p class="card-text"> <%= listing.description%></p>
       <p class="card-text">&#8377;<%= listing.price%> <br /></p> 
       <p class="card-text"><%=listing.location%></p>
      <p class="card-text"><%= listing.country%></p>
    </div>
  </div>

  <div class="btns">
   <% if(currUser && currUser._id.equals(listing.owner._id)) { %> 
    <a
      href="/listings/<%=listing._id%>/edit"
      class="btn btn-dark col-1 offset-2 edit-btn"
      >Edit</a
    >
    <form method="POST" action="/listings/<%= listing._id %>/?_method=delete">
      <button class="btn btn-dark offset-4">DELETE</button>
    </form>
    <% } %>
  </div>

  <div class="col-md-8 offset-2 mt-2">
   <% if(currUser){ %> 
    <hr />
    <h4>Leave a Reviews</h4>
    <form
      action="/listings/<%=listing._id%>/reviews"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input
          type="range"
          id="rating"
          min="1"
          max="5"
          name="review[rating]"
          class="form-range"
        />
      </div>

      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea
          id="comment"
          name="review[comment]"
          cols="30"
          rows="5"
          required
          class="form-control"
        ></textarea>
        <div class="invalid-feedback">Need to add some Comments</div>
      </div>
   
      <button class="mb-3 mt-3 btn btn-outline-dark">Submit</button>
      <% } %>
    </form>

    <hr />

    
      <p><b>All Reviews</b></p>
      <div class="row">
        <%for(review of listing.reviews){%>
        <div class="card col-5 ms-3 mb-3 ">
          <div class="card-body">
            <h5 class="card-title">Jone Doe</h5>
            <p class="card-text"><%= review.comment %></p>
            <p class="card-text"><%= review.rating%>stars</p>
          </div>
          <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="mb-3" method="POST">
        <button class="btn btn-sm btn-dark">Delete</button>
          </form>
        </div>
        <%} %>
      </div>
    </div>


  </div>
</div>
